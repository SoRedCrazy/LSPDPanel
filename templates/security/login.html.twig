{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="ui grid middle aligned" style="margin:3em;">
        <div class="row centered">
            <div class="ui container segment placeholder">
                <img class="ui Massive image centered"
     src="/webimg/lspdHeader.webp"
     alt="lspdimge">
                <div class="ui large form">
                    <form method="post">
                        <h1 class="header">LSPD Panel</h1>
                        {% if error %}
                            <div class="alert alert-danger">Mot de passe ou identitiants invalide</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Tu es déjà connecter {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">deconnexion</a>
                            </div>
                        {% endif %}

                        
                        <div class="required field">
                            <label for="inputUsername">Nom Prénom</label>
                            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" placeholder="antoine yourath" required autofocus>
                        </div>
                        <div class="required field">
                            <label for="inputPassword">mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control ui centered" autocomplete="current-password" placeholder="********" required>
                        </div>
                        
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}
                        <div>
                            <button class="ui sumbit primary button" type="submit">
                                Connection
                            </button>
                        </div>
                    </form>
                </div>
            </div>   
        </div>
    </div>
{% endblock %}
